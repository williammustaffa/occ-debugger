{
  "manifest_version": 2,
  "name": "OCC Debugger",
  "version": "1.2.2",
  "description": "Add some functionalities to debug occ",
  "short_name": "Occ Debugger",
  "permissions": ["tabs", "activeTab", "storage", "<all_urls>"],
  "web_accessible_resources": ["scripts/occDebugger.js"],
  "devtools_page": "views/devtools/index.html",
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/contentScript.js"],
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "OCC Debugger",
    "default_popup": "views/popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "128": "assets/icons/icon128.png"
    }
  }
 }