{
  "manifest_version": 2,
  "name": "OCC Debugger",
  "version": "1.0.0",
  "description": "Add some functionalities to debug occ",
  "short_name": "Occ Debugger",
  "permissions": ["tabs", "activeTab", "storage", "<all_urls>"],
  "web_accessible_resources": ["scripts/occ-debugger.js"],
  "devtools_page": "views/devtools/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/inject.js"],
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "OCC Debugger",
    "default_popup": "views/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
 }