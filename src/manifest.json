{
  "manifest_version": 3,
  "name": "OCC Extras",
  "version": "__version__",
  "description": "Extra functionalities for OCC Users and Developers",
  "short_name": "Occ Debugger",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/occDebugger.js",
        "views/ccadmin/*",
        "views/ccstore/*"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "devtools_page": "views/devtools/index.html?name=occ",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/loader.js"],
      "all_frames": false,
      "run_at":"document_start"
    }
  ],
  "action": {
    "default_title": "OCC Debugger",
    "default_popup": "views/popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "128": "assets/icons/icon128.png"
    }
  }
}